<% if @contributor_profile %>
  <% title "#{@contributor_profile.name}'s Pictures" %>
<% elsif @tag %>
  <% title "Pictures Tagged With #{@tag.name}" %>
<% else %>
  <% title 'Pictures' %>
<% end %>

<% if @pictures %>
  <%= render(
    partial: 'shared/picture_gallery',
    locals: {
      pictures: @pictures,
      group_into_albums: (!@contributor_profile && !@tag)
    }
  ) %>
<% end %>
