<% title "Contributions" %>
<%= render partial: 'redesign/shared/meta_tags' %>

<%= render partial: 'redesign/contributions/navigation' %>

<% if params[:media_type] == 'pictures' || !params[:media_type] %>
  <%= render(
    partial: 'redesign/shared/pictures',
    locals: { pictures: @pictures, group_pictures_into_albums: false }
  ) %>
<% end %>
<% if params[:media_type] == 'literature' %>
  <%= render(
    partial: 'redesign/shared/literature_pages',
    locals: { pages: @pages }
  ) %>
<% end %>
<% if params[:media_type] == 'music' %>
  <%= render(
    partial: 'redesign/shared/music_tracks',
    locals: { music_tracks: @music_tracks }
  ) %>
<% end %>
<% if params[:media_type] == 'videos' %>
  <%= render(
    partial: 'redesign/shared/videos',
    locals: { videos: @videos }
  ) %>
<% end %>
<% if params[:media_type] == 'downloads' %>
  <%= render(
    partial: 'redesign/shared/downloads',
    locals: { downloads: @downloads }
  ) %>
<% end %>
