<section class="cards">
  <% downloads.each do |download| %>
    <article class="card">
      <% if download.download_picture.present? %>
        <div class="card__picture">
          <%= link_to(
            show_picture(download, 'download_picture', :thumbnail),
            download
          ) %>
        </div>
      <% end %>
      <h1 class="card__heading">
        <%= link_to download.name, download %>
      </h1>
      <div class="card__body">
        <% unless download.publish && download.category.publish %>
          <%= render partial: 'redesign/shared/draft' %>
        <% end %>
        <p><%= download.description %></p>
      </div>
    </article>
  <% end %>
  <footer class="cards__footer">
    <%= paginate downloads %>
  </footer>
</section>
