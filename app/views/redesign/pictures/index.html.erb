<% if @contributor_profile %>
  <% title "#{@contributor_profile.name}'s Pictures" %>
<% elsif @tag %>
  <% title "Pictures Tagged With #{@tag.name}" %>
<% else %>
  <% title 'Pictures' %>
<% end %>

<% if @pictures %>
  <%= render(
    partial: 'redesign/shared/pictures',
    locals: {
      pictures: @pictures,
      group_pictures_into_albums: (@contributor_profile ? true : false)
    }
  ) %>
<% end %>
