<article class="home-music-track">
  <div class="home-music-track__picture">
    <%= link_to(
      show_picture(music_track, 'music_track_picture', :original),
      redesign_music_track_path(music_track)
    ) %>
  </div>
  <h1 class="home-music-track__heading">
    <%= link_to music_track.name, redesign_music_track_path(music_track) %>
  </h1>
  <footer class="home-music-track__more">
    <%= link_to(
      'More Music',
      redesign_contributions_path(media_type: 'music')
    ) %>
  </footer>
</article>
