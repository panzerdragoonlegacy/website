<!DOCTYPE html>
<html>
  <head>
    <title>
      Panzer Dragoon Legacy
      <% if yield(:title).present? %> - <%= yield(:title) %><% end %>
    </title>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="description" content="<%= yield(:description) %>" />
    <%= render 'layouts/open_graph_metadata' %>
    <%= favicon_pack_tag 'media/images/favicon.ico' %>
    <%= auto_discovery_link_tag(:atom, news_entries_path(:atom)) %>
    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="overall">
      <%= render 'layouts/header' %>
      <%= render 'layouts/top_navigation' %>
      <div id="main">
        <%= render 'layouts/left_navigation' %>
        <div id="content">
          <% flash.each do |name, msg| %>
            <% unless name.to_s == 'timedout' %>
              <%= content_tag :div, msg, id: "flash_#{name}" %>
            <% end %>
          <% end %>
          <% if yield(:title).present? %>
            <h1><%= yield(:title) %></h1>
          <% end %>
          <%= yield %>
        </div>
      </div>
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
