<div id="navigation">
  <%= form_with url: searches_path, method: :get, id: 'search' do |form| %>
    <%= form.text_field :query, placeholder: 'Search...' %>
  <% end %>
  <ul>
    <% {
      'Home': root_path,
      'Site Map': site_map_path,
      'Forum': 'https://discuss.panzerdragoonlegacy.com',
      'Discord': 'https://discordapp.com/invite/N3mrMh6',
      'Wiki': 'https://panzerdragoon.fandom.com',
      'Contributors': contributor_profiles_path,
      'Contribute': '/how-to-contribute'
    }.each do |key, value| %>
      <li><%= link_to key, value %></li>
    <% end %>
  </ul>
</div>
