<%= form_for [:admin, @contributor_profile], html: { multipart: true } do |f| %>
  <%= render 'admin/shared/form/error_messages', target: @contributor_profile %>
  <%= render(
    partial: 'admin/shared/form/name',
    locals: {
      f: f,
      info: "Use a nicely formatted version of the contributor's name, e.g. " +
        '"Solo Wing" rather than "solo_wing_98".'
    }
  ) %>
  <%= render 'description', f: f %>
  <%= render 'email_address', f: f %>
  <%= render 'discourse_username', f: f %>
  <%= render 'avatar', f: f, contributor_profile: @contributor_profile %>
  <%= render 'website_name', f: f %>
  <%= render 'website_url', f: f %>
  <%= render 'facebook_username', f: f %>
  <%= render 'twitter_username', f: f %>
  <% if policy(@contributor_profile).permitted_attributes.include? :publish %>
    <%= render partial: 'admin/shared/form/publish', locals: { f: f } %>
  <% end %>
  <%= render partial: 'admin/shared/form/save_buttons', locals: { f: f } %>
<% end %>
