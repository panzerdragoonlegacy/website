<% if target.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <h2>
      <%= pluralize target.errors.count, 'error' %> prevented this record
        from being saved:
    </h2>
    <ul>
      <% target.errors.to_hash.each do |field_name, messages| %>
        <% if messages.count > 0 %>
          <% messages.each do |message| %>
            <li><%= friendly_error_message(field_name, message) %></li>
          <% end %>
        <% end %>
      <% end %>
    </ul>
  </div>
<% end %>
