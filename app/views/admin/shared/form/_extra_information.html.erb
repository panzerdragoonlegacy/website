<div class="form-group">
  <%= f.label :information, 'Extra Information' %>
  <%= f.text_area :information, rows: 10, class: 'form-control' %>
  <small>
    <%=
      image_pack_tag(
        'media/images/markdown-mark.png',
        alt: 'Markdown Mark',
        width: '30px',
        height: '18px'
      )
    %>
    You may use a <a href="/markdown-syntax-guide" target="_blank">limited
    subset of Markdown</a> to format the page's extra information.
  </small>
  <% if defined? info %>
    <%=
      render(
        partial: 'admin/shared/form/info',
        locals: { info: info }
      )
    %>
  <% end %>
</div>
