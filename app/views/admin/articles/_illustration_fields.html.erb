<div class="illustration nested-fields">
  <% if f.object.illustration_file_name.blank? %>
    <%= f.file_field :illustration %>
  <% else %>
    <%= image_tag f.object.illustration.url(:embedded) %>
    <a class="btn btn-secondary insert_tag" href="#" role="button">
      Insert Markdown Tag
    </a>
    <p>Filename: <%= f.object.illustration_file_name %></p>
    <%= link_to 'Popover Image', f.object.illustration.url(:popover) %> |
    <%= link_to 'Original Image', f.object.illustration.url %> |
  <% end %>
  <%= link_to_remove_association 'Remove Illustration', f %><br />
</div>
