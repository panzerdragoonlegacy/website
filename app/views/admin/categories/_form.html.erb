<%= form_for [:admin, @category] do |f| %>
  <%= render 'admin/shared/form/error_messages', target: @category %>
  <%= render 'category_type', f: f %>
  <%= render 'category_group', f: f %>
  <%= render 'saga', f: f %>
  <%= render partial: 'picture', locals: { f: f, category: @category } %>
  <%= render partial: 'admin/shared/form/name', locals: { f: f } %>
  <%= render 'short_name_for_saga', f: f %>
  <%= render 'short_name_for_media_type', f: f %>
  <%= render partial: 'admin/shared/form/description', locals: { f: f } %>
  <%= render partial: 'categorisations', locals: { f: f } %>
  <% if policy(@category).permitted_attributes.include? :publish %>
    <%= render partial: 'admin/shared/form/publish', locals: { f: f } %>
  <% end %>
  <%= render partial: 'admin/shared/form/save_buttons', locals: { f: f } %>
<% end %>
