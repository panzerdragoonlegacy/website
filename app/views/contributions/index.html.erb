<% title "Contributions By Date" %>
<%= render partial: 'shared/meta_tags' %>

<%= render partial: 'contributions/navigation' %>

<% if params[:media_type] == 'pictures' || !params[:media_type] %>
  <%= render(
    partial: 'shared/picture_gallery',
    locals: { pictures: @pictures, group_into_albums: false }
  ) %>
<% end %>
<% if params[:media_type] == 'literature' %>
  <%= render(
    partial: 'shared/literature_pages',
    locals: { pages: @pages }
  ) %>
<% end %>
<% if params[:media_type] == 'music' %>
  <%= render(
    partial: 'shared/music_tracks',
    locals: { music_tracks: @music_tracks }
  ) %>
<% end %>
<% if params[:media_type] == 'videos' %>
  <%= render(
    partial: 'shared/videos',
    locals: { videos: @videos }
  ) %>
<% end %>
<% if params[:media_type] == 'downloads' %>
  <%= render(
    partial: 'shared/downloads',
    locals: { downloads: @downloads }
  ) %>
<% end %>
