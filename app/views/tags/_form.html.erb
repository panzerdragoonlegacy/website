<%= form_for @tag do |f| %>  
  <%= render "shared/error_messages", :target => @tag %>
  <p>
    <%= f.label :name, "Name" %><br />
    <%= f.text_field :name %>
  </p>
  <p>  
    <%= f.label :description, "Description" %><br />
    <%= f.text_area :description %>  
  </p>
  <p>  
    <%= f.submit %>  
  </p>
<% end %>